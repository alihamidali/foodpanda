<!-- Page -->
  <div class="page">
    <div class="page-header text-center">
      <h1 class="page-title">Page Title</h1>
      <p class="page-description">
        Page Description Here.
      </p>
    </div>
    <div class="page-content">
      <div class="panel">
          <header class="panel-heading">
            <h3 class="panel-title">Add Row</h3>
          </header>
          <div id="exampleTableAddToolbar">
            <%= link_to(new_admin_user_path(), class: "btn btn-outline btn-primary") do %>
            <i class="icon wb-plus" aria-hidden="true"></i> Add row
            <% end %>
          </div>
          <div class="panel-body">
            <table class="table table-hover dataTable table-striped width-full" id="exampleTableAdd">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Role</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Role</th>
                  <th>Action</th>
                </tr>
              </tfoot>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td><%= user[:first_name] %></td>
                    <td><%= user[:last_name] %></td>
                    <td><%= user[:name] %></td>
                    <td><%= link_to 'edit' url: => 'add_new' | link_to 'delete' url: => 'unassign_role' %></td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
  <!-- End Page -->