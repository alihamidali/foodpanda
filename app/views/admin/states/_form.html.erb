<div class="form-group">
    <%= f.label 'State Name', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
    	<%= f.text_field :name, class: 'form-control', id: "inputEmail3", placeholder: ""%>
    </div>
    <%= f.label 'Country Name', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
    	<%= f.select(:country_id) do %>
    		<% @countries.each do |c| %>
    		<%= content_tag(:option, c[:name], value: c[:id])%>
    		<% end %>
    	<% end %>
    </div>
  </div>