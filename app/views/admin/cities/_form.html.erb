<div class="form-group">
    <%= f.label 'City Name', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
    	<%= f.text_field :name, class: 'form-control', id: "inputEmail3", placeholder: ""%>
    </div>
</div>
<div class="form-group">
    <%= f.label 'State Name', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
        <%= f.select(:state_id) do %>
            <% @states.each do |c| %>
            <%= content_tag(:option, c[:name], value: c[:id])%>
            <% end %>
        <% end %>
    </div>
</div>
<div class="form-group">
    <%= f.label 'City picture', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
        <%= f.file_field :thumbnail %>
    </div>
</div>